<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Please enter your phone number:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPhoneNr"
        android:enabled="true"
        android:textSize="20dp"
        android:layout_above="@+id/editPhoneNr"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editPhoneNr"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="+4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start driving"
        android:id="@+id/buttonStartRiding"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/editPhoneNr"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
